<form method="post" action="/stations">
  <label>Select an existing suggestion:</label><br>
  <select name="origin">
    <% @suggested_snacks.each do |snack| %>
      <option><%= snack["name"] %></option>
    <% end %>
  </select>
  <input type="submit">
</form>
<br>
