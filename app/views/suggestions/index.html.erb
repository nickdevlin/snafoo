<h1>SNAFOO</h1>

<table>
  <tr>
    <th>Old Standbys</th>
  </tr>
  <% @classic_snacks.each do |snack| %>
  <tr>
    <td><%= snack["name"] %></td>
  </tr>
  <% end %>
</table>
<br>
<table>
  <tr>
    <th>Suggestion</th>
    <th>Last Purchased</th>
    <th>Vote Count</th>
    <th>Vote Button</th>
  </tr>
  <% @suggested_snacks.each do |snack| %>
  <tr>
    <td><%= snack["name"] %></td>
    <% if snack["lastPurchaseDate"] %>
      <td><%= snack["lastPurchaseDate"] %></td>
    <% else %>
      <td>Never purchased</td>
    <% end %>
    <td>No votes yet</td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to "Want to suggest a snack?", new_path %>
